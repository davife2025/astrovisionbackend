/**
 * Poll Astrometry API for RA/Dec results
 */
async function getCalibrationResults(subId, maxAttempts = 15) {
  const statusUrl = `http://nova.astrometry.net/api/submissions/${subId}`;
  
  for (let i = 0; i < maxAttempts; i++) {
    const response = await axios.get(statusUrl);
    const data = response.data;

    if (data.job_calibrations && data.job_calibrations.length > 0) {
      const jobId = data.jobs[0];
      const resultUrl = `http://nova.astrometry.net/api/jobs/${jobId}/calibration/`;
      const calResponse = await axios.get(resultUrl);
      return calResponse.data; // Returns { ra, dec, radius... }
    }
    
    console.log(`üî≠ Solving coordinates... (Attempt ${i + 1}/${maxAttempts})`);
    await new Promise(resolve => setTimeout(resolve, 3000));
  }
  
  throw new Error("Astrometry solving timed out.");
}

/**
 * Perform pixel-level image comparison
 */
async function compareImages(userImageBuffer, nasaImageUrl) {
  try {
    // Load User Image and NASA Image using Jimp
    const [userImg, nasaImg] = await Promise.all([
      Jimp.read(userImageBuffer),
      Jimp.read(nasaImageUrl)
    ]);

    // Normalize both to exactly 500x500 for pixel-perfect comparison
    userImg.resize(500, 500);
    nasaImg.resize(500, 500);

    // Access raw pixel buffers
    const diffBuffer = Buffer.alloc(500 * 500 * 4);
    const numDiffPixels = pixelmatch(
      userImg.bitmap.data,
      nasaImg.bitmap.data,
      diffBuffer,
      500, 500,
      { threshold: 0.15 } // Sensitivity threshold
    );

    return numDiffPixels;
  } catch (error) {
    console.error('Image comparison error:', error.message);
    throw new Error('Failed to compare images');
  }
}

// --- API ROUTES ---

/**
 * MAIN ROUTE: The Discovery Pipeline
 */
app.post('/analyze-discovery', async (req, res) => {
  try {
    const { imageBase64 } = req.body;
    
    if (!imageBase64) {
      return res.status(400).json({ error: 'No image data provided' });
    }

    const imageBuffer = Buffer.from(imageBase64, 'base64');

    // --- STEP 1: SOLVE RA/DEC ---
    console.log("üöÄ Logging into Astrometry.net...");
    const loginRes = await axios.post(
      'http://nova.astrometry.net/api/login',
      `request-json=${JSON.stringify({ "apikey": ASTROMETRY_API_KEY })}`
    );
    
    if (!loginRes.data.session) {
      throw new Error('Astrometry authentication failed');
    }
    
    const session = loginRes.data.session;

    const form = new FormData();
    form.append('request-json', JSON.stringify({ 
      session, 
      publicly_visible: 'n' 
    }));
    form.append('file', imageBuffer, { filename: 'scan.jpg' });

    console.log("üì§ Uploading for celestial solving...");
    const uploadRes = await axios.post(
      'http://nova.astrometry.net/api/upload',
      form,
      { headers: form.getHeaders() }
    );

    if (!uploadRes.data.subid) {
      throw new Error('Failed to upload to Astrometry');
    }

    const calibration = await getCalibrationResults(uploadRes.data.subid);
    const { ra, dec } = calibration;

    // --- STEP 2: FETCH NASA HISTORICAL DATA ---
    console.log(`üìç Solved: RA ${ra}, Dec ${dec}. Fetching NASA Archive...`);
    const nasaUrl = `https://skyview.gsfc.nasa.gov/cgi-bin/images?survey=sdssi&position=${ra},${dec}&size=0.1&pixels=500`;

    // --- STEP 3: IMAGE PROCESSING ---
    console.log("üîç Running Change-Detection Analysis...");
    const numDiffPixels = await compareImages(imageBuffer, nasaUrl);

    // Logic: Is it a discovery?
    const isDiscovery = numDiffPixels > 1500;

    res.json({
      coords: { ra, dec },
      historicalImage: nasaUrl,
      discovery: isDiscovery
        ? `DISCOVERY: Found ${numDiffPixels} new pixel variances. Transient event detected!`
        : "No significant changes found against NASA records.",
      type: isDiscovery ? "SUPERNOVA" : "GALAXY",
      rawScore: numDiffPixels
    });

  } catch (error) {
    console.error("‚ùå Pipeline Error:", error.message);
    res.status(500).json({
      error: "Scientific analysis failed.",
      details: error.message
    });
  }
});

/**
 * Vision Model - Identify celestial objects
 */
app.post('/api/identify', async (req, res) => {
  const { image } = req.body;

  if (!image) {
    return res.status(400).json({ error: 'No image data provided' });
  }

  if (!HF_API_KEY) {
    return res.status(500).json({ 
      error: 'HF_API_KEY not configured. Please set it in .env file.' 
    });
  }

  try {
    const response = await fetch(
      'https://api-inference.huggingface.co/models/llava-hf/llava-1.5-7b-hf',
      {
        method: 'POST',
        headers: {
          Authorization: `Bearer ${HF_API_KEY}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          inputs: {
            image,
            text: 'Identify the astronomical object. Describe its visual structure in detail.',
          },
        }),
      }
    );

    if (response.status === 503) {
      return res.status(503).json({ 
        error: 'Vision model is loading. Please try again in 30 seconds.' 
      });
    }

    if (!response.ok) {
      throw new Error(`HF API error: ${response.statusText}`);
    }

    const result = await response.json();
    const description = result[0]?.generated_text || 'Celestial structure detected.';

    res.json({ description });
  } catch (error) {
    console.error('Llava identification error:', error);
    res.status(500).json({ error: error.message });
  }
});

/**
 * Chat with AstroSage AI model
 */
app.post('/api/chat', async (req, res) => {
  const { prompt, maxTokens = 300, temperature = 0.7, topP = 0.9 } = req.body;

  if (!prompt) {
    return res.status(400).json({ error: 'No prompt provided' });
  }

  if (!HF_API_KEY) {
    return res.status(500).json({ 
      error: 'HF_API_KEY not configured. Please set it in .env file.' 
    });
  }

  try {
    const response = await fetch(
      'https://router.huggingface.co/featherless-ai/v1/completions',
      {
        method: 'POST',
        headers: {
          Authorization: `Bearer ${HF_API_KEY}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'AstroMLab/AstroSage-8B',
          prompt,
          max_tokens: maxTokens,
          temperature,
          top_p: topP,
        }),
      }
    );

    if (!response.ok) {
      throw new Error(`Chat API error: ${response.statusText}`);
    }

    const data = await response.json();
    res.json(data);
  } catch (error) {
    console.error('Chat error:', error);
    res.status(500).json({ error: error.message });
  }
});

/**
 * Fetch NASA astronomical image
 */
app.get('/api/nasa-image', async (req, res) => {
  const { query } = req.query;

  if (!query) {
    return res.status(400).json({ error: 'No search query provided' });
  }

  const NASA_API_KEY = process.env.NASA_API_KEY || 'DEMO_KEY';

  try {
    const response = await axios.get(
      `https://images-api.nasa.gov/search?q=${encodeURIComponent(query)}&media_type=image`
    );

    const items = response.data.collection?.items || [];

    if (items.length > 0) {
      const imageUrl = items[0].links?.[0]?.href;
      res.json({ imageUrl });
    } else {
      res.json({ imageUrl: null });
    }
  } catch (error) {
    console.error('NASA API error:', error);
    res.status(500).json({ error: error.message });
  }
});

